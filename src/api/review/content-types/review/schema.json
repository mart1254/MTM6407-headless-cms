{
  "kind": "collectionType",
  "collectionName": "reviews",
  "info": {
    "singularName": "review",
    "pluralName": "reviews",
    "displayName": "Review",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "reviewRating": {
      "type": "integer",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "cover": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "platform": {
      "type": "enumeration",
      "enum": [
        "All",
        "PC",
        "Xbox",
        "PlayStation",
        "Switch"
      ],
      "required": true,
      "default": "All"
    },
    "reviewText": {
      "type": "text",
      "required": true
    }
  }
}
